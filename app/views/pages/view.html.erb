<script src="https://cdn.jsdelivr.net/npm/vue"></script>


<div id="app">
  <p>{{ name }}</p>
  <p v-if="name == 'Max'">Name Updated!</p>
  <button v-on:click="changeName">Change Name</button>
</div>

<script>
  new Vue({
    el: '#app',
    data: {
      name: 'Max'
    },
    methods: {
      changeName: function() {
        this.name = 'Anna';
      }
    }
  });

</script>
